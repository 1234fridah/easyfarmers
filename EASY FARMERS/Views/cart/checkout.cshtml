@model List<easy_farmers.Models.CartItem>

<h2>Checkout</h2>
<p>Total Price: @Model.Sum(p => p.Price * p.Quantity).ToString("C")</p>

<form method="post" action="@Url.Action("CompleteCheckout", "Cart")">
    <label>Name:</label>
    <input type="text" name="customerName" class="form-control" required />

    <label>Email:</label>
    <input type="email" name="customerEmail" class="form-control" required />

    <label>Address:</label>
    <input type="text" name="customerAddress" class="form-control" required />

    <button type="submit" class="btn btn-primary mt-3">Place Order</button>
</form>

